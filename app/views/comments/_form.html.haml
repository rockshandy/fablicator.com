= form_for([@post, @comment || @post.comments.build]) do |f|
  - if @comment && @comment.errors.any?
    #errorExplanation
    %h2
      = pluralize(@comment.errors.count, "error")
      prohibited this comment from being saved:
    %ul
      - @comment.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit